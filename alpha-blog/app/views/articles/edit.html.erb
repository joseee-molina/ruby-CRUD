
<h1>Edit the article </h1>

<!-- Check if there are any errors, show error message here!! -->

<% if @articleToEdit.errors.any? %>
    <h2> The following errors prevented the article from being saved properly</h2>
    <% @articleToEdit.errors.full_messages.each do |msg| %>
        <%= msg %>
        <br>
    <% end %>

<% end %>


<%= form_with(model: @articleToEdit, local: true) do |f| %>

    <p>  
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>

    </p>
    <p>  
        <%= f.label :description %>
        <br>
        <%= f.text_area :description %>
        
    </p>
    
    <p>
        <%= f.submit %>
        <!-- When we click submit, it takes us to the controller ot the create action-->
    </p>

<% end %>

<%= link_to 'Back to homepage', articles_path %>
